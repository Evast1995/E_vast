<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="horizontal"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_head_image" android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen" android:layout_centerVertical="true"
        android:layout_margin="@dimen/message_head_margin"/>

    <TextView
        android:id="@+id/friend_name_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_toRightOf="@id/friend_head_image"
        android:textColor="@color/black"  android:textSize="15sp"
        android:layout_centerVertical="true"/>


</RelativeLayout>
