<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="horizontal"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_head_image" android:layout_width="@dimen/image_dimen"
        android:layout_height="@dimen/image_dimen" android:layout_centerVertical="true"
        android:layout_margin="@dimen/message_head_margin" />

    <TextView
        android:id="@+id/message_time_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentRight="true"
        android:textColor="@color/gray" android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/messagee_text_right"/>

    <LinearLayout
        android:id="@+id/text_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_centerVertical="true"
        android:layout_toRightOf="@id/message_head_image" android:orientation="vertical"
        android:layout_toLeftOf="@id/message_time_text">
        <TextView
            android:id="@+id/message_name_text" android:layout_width="match_parent"
            android:layout_height="match_parent" android:textSize="15sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/message_contact_text" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent" android:layout_height="@dimen/stroken_height"
        android:background="@color/stroken_color" android:layout_toRightOf="@id/message_head_image"
        android:layout_alignParentBottom="true" android:layout_marginBottom="@dimen/message_stroken_marginbottom"/>


</RelativeLayout>
