<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/navigation_image"
        android:layout_width="@dimen/navigate_icon_dimen"
        android:layout_height="@dimen/navigate_icon_dimen"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/navigation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/navigate_margin_bottom"
        android:layout_marginTop="@dimen/navigate_margin_bottom"
        android:textColor="@drawable/text_bg"/>
</RelativeLayout>
