<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/food_item_image" android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" android:layout_margin="15dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="20dp" android:layout_height="20dp"
        android:src="@mipmap/right" android:layout_alignParentRight="true"
        android:layout_centerVertical="true" android:layout_marginRight="15dp"
        android:id="@+id/food_item_icon"/>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_toRightOf="@id/food_item_image"
        android:layout_centerVertical="true" android:layout_toLeftOf="@id/food_item_icon"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/food_item_title" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" android:textSize="15sp"
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:id="@+id/food_item_phone" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brown" android:textSize="10sp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/food_item_address" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brown" android:textSize="10sp"/>

    </LinearLayout>
</RelativeLayout>
